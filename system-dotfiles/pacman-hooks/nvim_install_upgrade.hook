[Trigger]
Operation = Upgrade
Operation = Install
Type = Package
Target = neovim

[Action]
Description = Install/Update neovim python 3 client virtual env
When = PostTransaction
Exec = /usr/bin/sudo -u debz /usr/bin/env zsh -c "mkdir -p $ENV_DIR; python -m venv $ENV_DIR/$NVIM_PROVIDER_PYLIB; $ENV_DIR/$NVIM_PROVIDER_PYLIB/bin/pip install neovim -U"
